.humpyard-dialog-title
  = I18n.t 'humpyard_cms.pages.edit.title'
.dialog-columns
  .left-dialog-column.with-toolbar
    #hy-page-treeview
      = render :partial => 'tree', :locals => {:pages => @pages, :page => @page}

  .left-dialog-buttons.humpyard-form-buttons
    - Humpyard::config.page_types.each do |name, type|
      = link_to I18n.t('humpyard_cms.pages.edit.add', :page_type => type.model_name.human), new_humpyard_page_path(:type => name), :'data-dialog-link' => true, :'data-icon' => "ui-icon-circle-plus"
  .right-dialog-column
    - if @page
      = render :partial => 'edit', :locals => {:page => @page}
    - else
      Nothing selected
.humpyard-dialog-buttons
